set -e

. $srcdir/tests/utils.sh

t_init cvs

CVSROOT=$testdir/repo
export CVSROOT

# Create repository
x mkdir $CVSROOT
x cvs -d $CVSROOT init

# Create an empty project and check it out
x mkdir $CVSROOT/project

x cvs co project
t_populate

x cvs co -d copy project
t_verify

t_modify
t_update
t_verify

t_revert
cd copy
x cvs -n up three
status=$(cvs -n up three 2>/dev/null)
if test "x$status" != 'x'; then
    fatal "Did not properly revert 'three'"
fi
cd ..

t_done
